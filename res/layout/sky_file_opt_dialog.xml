<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="文件信息"
        android:drawableLeft="@drawable/pictures_select_icon_selected"
        android:textColor="@color/sky_green"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:background="@color/sky_green" />
    <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="left"
            android:textColor="@color/sky_light_blank"
            android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">

        <TextView
                style="@style/dialog_btn_bg"
                android:id="@+id/btn_open"
                android:text="打开"
                android:layout_marginRight="12dp"
                android:textSize="16sp" />

        <TextView
                style="@style/dialog_btn_bg"
                android:id="@+id/btn_rename"
                android:layout_marginRight="12dp"
                android:textSize="16sp"
                android:text="重命名" />

        <TextView
                style="@style/dialog_btn_bg"
                android:id="@+id/btn_delete"
                android:textSize="16sp"
                android:text="删除" />

    </LinearLayout>

</LinearLayout>